[flake8]
max-line-length = 88
max-complexity = 10
select = E,W,F,C,N,B,BLK,I
extend-ignore = E203,E501,W503,D100,D101,D102,D103,D104,D105,B008,N806,N803
exclude = .git,__pycache__,.venv,venv,env,.env,.tox,.eggs,*.egg,build,dist,.pytest_cache,.coverage,htmlcov,.mypy_cache,.ruff_cache,node_modules,migrations
application-import-names = telegram_audio_downloader
import-order-style = google
per-file-ignores = tests/*:S101,B101,PLR2004,__init__.py:F401,F403,cli.py:C901,PLR0913,legacy/*:N802,N803,N806
docstring-convention = google
strictness = short
require-return-section-when-returning-nothing = false
max-arguments = 8
max-locals = 20
max-returns = 6
max-branches = 15
max-statements = 60
classmethod-decorators = classmethod,validator,root_validator
staticmethod-decorators = staticmethod,lru_cache,singledispatch
inline-quotes = double
multiline-quotes = double
avoid-escape = true
max-cyclomatic-complexity = 10
max-cognitive-complexity = 12
format = %(path)s:%(row)d:%(col)d: %(code)s %(text)s
show-source = true
statistics = true
count = true
aggressive = 1
enable-extensions = B,C4,SIM,BLK,I,Q,T,PIE,COM,A