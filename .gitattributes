# Automatische Zeilenenden für Textdateien
* text=auto

# Explizite Zeilenenden für bestimmte Dateitypen
*.md text eol=lf
*.txt text eol=lf
*.py text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.sh text eol=lf
*.bat text eol=crlf

# Binärdateien
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.exe binary
*.dll binary
*.so binary
*.dylib binary
*.zip binary
*.tar binary
*.gz binary

# Sprachstatistiken
*.py linguist-language=Python
*.md linguist-language=Markdown
*.yml linguist-language=YAML
*.yaml linguist-language=YAML
*.sh linguist-language=Shell
*.bat linguist-language=Batchfile